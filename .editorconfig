root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cs,csx}]
dotnet_sort_system_directives_first = true
csharp_style_namespace_declarations = file_scoped:suggestion

[*.{json,yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
