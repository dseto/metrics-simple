{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/sourceRequest.schema.json",
  "title": "SourceRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "method",
    "path"
  ],
  "properties": {
    "method": {
      "type": "string",
      "enum": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ],
      "default": "GET"
    },
    "path": {
      "type": "string",
      "minLength": 1
    },
    "headers": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "default": {}
    },
    "queryParams": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "default": {}
    },
    "body": {
      "type": [
        "object",
        "string",
        "null"
      ]
    },
    "timeoutSeconds": {
      "type": "integer",
      "minimum": 1,
      "maximum": 600
    }
  }
}
