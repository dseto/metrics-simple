{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/connector.schema.json",
  "title": "Connector",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "baseUrl",
    "timeoutSeconds",
    "authRef"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "baseUrl": {
      "type": "string",
      "minLength": 1
    },
    "authRef": {
      "type": "string",
      "minLength": 1
    },
    "timeoutSeconds": {
      "type": "integer",
      "minimum": 1,
      "maximum": 600,
      "default": 60
    },
    "headers": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "default": {}
    },
    "queryParams": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "default": {}
    },
    "rateLimitPerMinute": {
      "type": "integer",
      "minimum": 0,
      "default": 0
    }
  }
}
