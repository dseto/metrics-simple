{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/process.schema.json",
  "title": "Process",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "status",
    "connectorId",
    "outputDestinations"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "Draft",
        "Active",
        "Disabled"
      ]
    },
    "connectorId": {
      "type": "string",
      "minLength": 1
    },
    "defaultVersion": {
      "type": "string"
    },
    "outputDestinations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/outputDestination"
      }
    }
  },
  "definitions": {
    "outputDestination": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "LocalFileSystem",
            "AzureBlobStorage"
          ]
        },
        "local": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "basePath": {
              "type": "string"
            }
          }
        },
        "blob": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "connectionStringRef": {
              "type": "string"
            },
            "container": {
              "type": "string"
            },
            "pathPrefix": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
