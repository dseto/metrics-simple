{
  "Serilog": {
    "MinimumLevel": "Debug",
    "Override": {
      "Microsoft": "Information",
      "Microsoft.AspNetCore": "Debug"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/api-development-.jsonl",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:O} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "Database": {
    "Path": "./config/config.db"
  },
  "Secrets": {
    "Path": "./config/secrets.local.json"
  },
  "Auth": {
    "Mode": "LocalJwt",
    "Issuer": "MetricsSimple",
    "Audience": "MetricsSimple.Api",
    "SigningKey": "DEV-ONLY-KEY-CHANGE-IN-PROD-32-CHARS-MIN!!",
    "AccessTokenMinutes": 60,
    "AllowedOrigins": [ "http://localhost:4200", "https://localhost:4200", "http://localhost:3000", "http://localhost:8080", "https://localhost:8080" ],
    "LocalJwt": {
      "MaxFailedAttempts": 5,
      "LockoutMinutes": 5,
      "EnableBootstrapAdmin": false,
      "BootstrapAdminUsername": "admin",
      "BootstrapAdminPassword": "admin123"
    }
  },
  "AI": {
    "ApiKey": "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",
    "Enabled": true,
    "Provider": "HttpOpenAICompatible",
    "EndpointUrl": "https://openrouter.ai/api/v1/chat/completions",
    "Model": "openai/gpt-oss-120b",
    "PromptVersion": "2.0.0",
    "TimeoutSeconds": 60,
    "MaxRetries": 1,
    "Temperature": 0.0,
    "MaxTokens": 4096,
    "TopP": 0.9,
    "EnableStructuredOutputs": true,
    "EnableResponseHealing": true
  },
  "AllowedHosts": "*"
}
