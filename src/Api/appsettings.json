{
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/api-.jsonl",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:O} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "Database": {
    "Path": "./config/config.db"
  },
  "Secrets": {
    "Path": "./config/secrets.local.json"
  }
}
